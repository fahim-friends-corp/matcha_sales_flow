# Django Settings
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Settings (if using PostgreSQL, uncomment and configure)
# DB_NAME=sales_leads_db
# DB_USER=postgres
# DB_PASSWORD=your_password
# DB_HOST=localhost
# DB_PORT=5432

# Google Maps API
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Apify API
APIFY_TOKEN=your_apify_token_here
# Profile scrapers (currently configured)
APIFY_ACTOR_TIKTOK=your_tiktok_actor_id_here
APIFY_ACTOR_INSTAGRAM=your_instagram_actor_id_here
# Optional: Additional actors for hashtag/place searches
# APIFY_ACTOR_INSTAGRAM_HASHTAG=apify/instagram-hashtag-scraper
# APIFY_ACTOR_INSTAGRAM_PLACE=apify/instagram-place-scraper

# Google Sheets Integration
# Your predefined Google Spreadsheet ID (from the URL)
# Example: If URL is https://docs.google.com/spreadsheets/d/ABC123xyz/edit
# Then GOOGLE_SHEETS_SPREADSHEET_ID=ABC123xyz
GOOGLE_SHEETS_SPREADSHEET_ID=your_spreadsheet_id_here

# Auto-export to Google Sheets when saving cafés (True/False)
# If True: Every saved café automatically appends to your sheet
# If False: Only manual exports via "Export" button
GOOGLE_SHEETS_AUTO_EXPORT=True

